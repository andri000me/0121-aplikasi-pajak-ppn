if ($Foto != "") {
    $ekstensi_diperbolehkan = array('png', 'jpg', 'jpeg');
    $x = explode('.', $Foto);
    $ekstensi = strtolower(end($x));
    $file_tmp = $_FILES['Foto']['tmp_name'];
    $rand     = rand(1, 999);
    $foto_baru = $rand . '-' . $Foto;
    if (in_array($ekstensi, $ekstensi_diperbolehkan) === true) {
        move_uploaded_file($file_tmp, 'assets/images/' . $foto_baru);

        $query = "INSERT INTO persediaan (KodeBarang, NamaBarang, Deskripsi, Harga, Foto) VALUES ('$KodeBarang', '$NamaBarang', '$Deskripsi', '$Harga',  '$foto_baru')";
        $result = mysqli_query($conn, $query);

        if (!$result) {
            die("Query gagal dijalankan: " . mysqli_errno($conn) . " - " . mysqli_error($conn));
        } else {
            echo "<script>alert('Data berhasil ditambah.');window.location='persediaan.php';</script>";
        }
    } else {
        echo "<script>alert('Ekstensi gambar yang boleh hanya png, jpg atau jpeg.');window.location='persediaan_create.php';</script>";
    }
} else {
    $query = "INSERT INTO persediaan (KodeBarang, NamaBarang, Deskripsi, Harga, Foto) VALUES ('$KodeBarang', '$NamaBarang', '$Deskripsi', '$Harga', null)";
    $result = mysqli_query($conn, $query);

    if (!$result) {
        die("Query gagal dijalankan: " . mysqli_errno($conn) . " - " . mysqli_error($conn));
    } else {
        echo "<script>alert('Data berhasil ditambah.');window.location='persediaan.php';</script>";
    }
}
